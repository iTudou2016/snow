doctype html
html
  head
    meta(charset='utf-8' name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1")
    meta(http-equiv="refresh" content="120")
    link(href="//cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
    link(href="//cdn.bootcss.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet")
    link(href="/css/default.css" rel="stylesheet")
    title!=title
    style(type="text/css").
      h2 {color:red;}
  body
    div(id="wrapper")
       div(id="page-wrapper")
         h1  SnowBlossom Pool 
         div
           span 当前时间: 
           span("id=currenttime") 
         div
           span 报告时间:  #{report.lastreport}
         script(type="text/javascript")
             |setInterval(function() {document.getElementById("currenttime").innerHTML=new Date().toLocaleTimeString() ;},1000);
         div(id="page")
           div(id="poolStats" class="row")
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-arrows fa-spin fa-fw") 
                 div(class="content")
                   div(class="text")
                     span 矿池算力
                   div(class="value")
                     span(class="smallText") #{report.poolhash}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-cubes") 
                 div(class="content")
                   div(class="text")
                     span 已发现区块
                   div(class="value")
                     span #{report.lastfound}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-unlock-alt") 
                 div(class="content")
                   div(class="text")
                     span 难度
                   div(class="value")
                     span #{report.difficulty}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-usd") 
                 div(class="content")
                   div(class="text")
                     span 在线矿机
                   div(class="value")
                     span #{report.workers}                     
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-cog fa-spin fa-fw") 
                 div(class="content")
                   div(class="text")
                     span 全网算力
                   div(class="value")
                     span #{report.networkhash}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-bars") 
                 div(class="content")
                   div(class="text")
                     span 区块高度
                   div(class="value")
                     span #{report.blockheight}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-snowflake-o") 
                 div(class="content")
                   div(class="text")
                     span 雪地狂欢
                   div(class="value")
                     span #{report.snowfield}
             div(class="col-lg-3 col-sm-4")
               div(class="infoBox hoverExpandEffect")
                 div(class="icon")
                   span(class="fa fa-btc") 
                 div(class="content")
                   div(class="text")
                     span 矿池费率
                   div(class="value")
                     span #{report.poolfee}                     
         div(class="card push-up-10")
           div(id="paymentsReport" class="table-responsive")
             table(class="table table-hover table-striped")
                thead
                  tr
                     th(class="col1")
                         span 已发现区块
                     th(class="col2")
                         span           
                  tr
                     th(class="col1")
                         span 区块Hash
                     th(class="col2")
                         span 区块编号
                tbody   
                  for item in report.blockfound                     
                     tr
                        td(class="col1")
                           span
                             a(target= "_blank" href="https://explorer.snowblossom.org/?search=" + item.account) #{item.account}
                        td(class="col2")
                           span #{item.blockNum}           
         div(class="card push-up-10")
           div(id="paymentsReport" class="table-responsive")
             table(class="table table-hover table-striped")
                thead
                  tr
                     th(class="col1")
                         span 活跃账号列表：
                     th(class="col2")
                         span                 
                  tr
                     th(class="col1")
                         span 账号
                     th(class="col2")
                         span 算力
                tbody   
                  for item in report.hashrate                     
                     tr
                        td(class="col1")
                           span #{item.account}                             
                        td(class="col2")
                           span #{item.hashrate}
         div(class="card push-up-10")
           div(id="paymentsReport" class="table-responsive")
             table(class="table table-hover table-striped")
                thead
                  tr
                     th(class="col1")
                         span 账号份额：
                     th(class="col2")
                         span                 
                  tr
                     th(class="col1")
                         span 账号
                     th(class="col2")
                         span 份额
                tbody   
                  for item in report.share                     
                     tr
                        td(class="col1")
                           span #{item.account}
                        td(class="col2")
                           span #{item.shares}
